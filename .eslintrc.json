{
  "root": true,
  "env": {
    "node": true,
    "es2022": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": "latest",
    "project": false
  },
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "no-console": "off",
    "no-undef": "off"
  },
  "ignorePatterns": [
    "dist/**",
    "node_modules/**",
    "**/*.md",
    "**/*.json",
    "**/*.lock",
    "**/*.yml",
    "**/*.yaml"
  ]
}

